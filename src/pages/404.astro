---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Página no encontrada">
  <section class="m-auto max-w-[1180px] 2xl:max-w-[1280px] mt-36 px-6">
    <div class="flex flex-col md:flex-row items-stretch bg-[#f9f9f9] rounded-md overflow-hidden">
      <div class="p-6 sm:p-10 w-full md:w-1/2 flex-col self-center justify-center text-center">
        <h1 class="text-5xl font-extrabold text-primary mb-4">
          Error 404
        </h1>
        <h1 class="text-3xl font-bold text-primary mb-4">
          Lo siento, esta página no existe
        </h1>
        <p class="text-primary text-2xl font-semibold mb-8">
          Volvamos a empezar.
        </p>
        <a
          href="/"
          class="inline-block bg-highlight-red text-highlight-white px-6 py-3 rounded-md font-bold hover:bg-primary transition-all duration-300"
        >
          Volver al inicio
        </a>
      </div>
      <div class="relative w-full md:w-1/2 min-h-[400px] md:min-h-[600px]">
        <div
          class="absolute inset-0 bg-cover bg-center bg-no-repeat filter grayscale"
          style={`background-image: url('/ingrid-bergman-II.png')`}
        >
        </div>
        <span class="absolute bottom-2 right-4 text-highlight-white z-10 text-sm sm:text-base">
          - <strong>Ingrid Bergman</strong>
        </span>
      </div>
    </div>
  </section>
</Layout> 